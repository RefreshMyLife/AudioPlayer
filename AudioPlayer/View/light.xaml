<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AudioPlayer.View">

    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#FFe0e0e0"/>
    </Style>

    
    <SolidColorBrush x:Key="TextBoxBackground" Color="#FFffffff"/>

    <SolidColorBrush x:Key="MainBackround" Color="#FFe0e0e0"/>

    <SolidColorBrush x:Key="ComboBox.Static.Background" Color="#FFffffff" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="#FFd7d9d7"/>
    <SolidColorBrush x:Key="ComboBox.Foreground.Color" Color="#FF000000"/>
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="#FFffffff"/>

    <SolidColorBrush x:Key="Scroll.Thumb" Color="#FFababab"/>

    <SolidColorBrush x:Key="Button.Background" Color="#FFffffff"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFd7d9d7"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFababab"/>
    <SolidColorBrush x:Key="Button.Foreground" Color="#FF000000"/>

    <SolidColorBrush x:Key="ListboxItem.Background" Color="#FFffffff"/>
    <SolidColorBrush x:Key="ListboxItem.MouseOver.Background" Color="#FFd7d9d7"/>
    <SolidColorBrush x:Key="ListboxItem.Selected.Background" Color="#FFababab"/>
    <SolidColorBrush x:Key="ListboxItem.Foreground" Color="#FF000000"/>

</ResourceDictionary>

